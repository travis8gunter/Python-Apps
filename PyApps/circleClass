import math
class Circle:
    def __init__(self,radius):
        self.radius = radius
        
    def getRadius(self):
        return self.radius
    
    def setRadius(self,radius):
        if radius >= 0:
            self.radius = radius
            return True
        else:
            return False
        
    def getArea(self):
        area = math.pi * self.radius**2
        return area
    
    def getCircumference(self):
        circumference = 2 * math.pi * self.radius
        return circumference
        
